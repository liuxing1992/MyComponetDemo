<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--初步是这个指示器 后期可以替换-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/baseTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d48"
        app:tabIndicatorColor="@color/design_default_color_primary"
        app:tabSelectedTextColor="@color/cardview_light_background"
        app:tabTextColor="@color/color_black" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/baseViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>